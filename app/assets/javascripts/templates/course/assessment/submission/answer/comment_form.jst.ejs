<% formActionPath = Routes.course_assessment_submission_answer_comment_path(
                    courseId, assessmentId, submissionId, answerId, postId) %>
<div class="answer-comment-form" data-action="<%= formActionPath %>" data-method="patch">
  <%= postCommenter %>
  <div class="form-group text">
    <textarea name="discussion_post[text]"
              class="form-control text airmode"
              aria-label="<%= I18n.t('javascript.course.assessment.submission.answer.comment.text.label') %>">
      <%= postContent %>
    </textarea>
  </div>

  <input type="reset" class="btn btn-default"
         value="<%= I18n.t('javascript.course.assessment.submission.answer.comment.reset') %>" />
  <input type="submit" class="btn btn-primary"
         value="<%= I18n.t('javascript.course.assessment.submission.answer.comment.submit') %>" />
</div>
